<% if current_user.try(:admin?) %>
<h1>ユーザー追加画面</h1>
<% if current_user.try(:admin?) %> <!--adminカラムに文字が入っているかどうか-->
<%= form_with(model: [:admin,@user],local: true) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.email_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>

<%= f.label :admin %>
  <%= f.select :admin ,options_for_select([["true","true"],["false","false"]])%>

<%= f.submit "Add user"%>
<% end %>
<% end %>
<% else %>
<h1>管理者以外は見れないエラーメッセージです</h1>
<% end %>