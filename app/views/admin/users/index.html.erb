<h1>ユーザー一覧</h1>
<% if current_user.try(:admin?) %>
<table>
  <tr>
    <th>ユーザーID</th>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>タスク数</th>
  </tr>

  <% @users.each do |user| %>
  <tr class = 'user_row'>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks.count %></td>

    <td><%= link_to '詳細を確認する', admin_user_path(user.id), id: "user-show-#{user.id}" %></td>
    <td><%= link_to 'タスクを編集する',edit_admin_user_path(user.id) %></td>
    <td><%= link_to 'ユーザー情報を削除',admin_user_path(user.id),method: :delete %></td>
  </tr>
  <% end %>
</table>
<% end %>