<h1>ユーザー編集画面</h1>
<% if current_user.try(:admin?) %> <!--adminカラムに文字が入っているかどうか-->
<%= form_with(model: [:admin,@user],local: true) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.email_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>

<%= f.label :admin %>
<%= f.text_field :admin %>

<%= f.submit "Add user"%>
<% end %>
<% end %>